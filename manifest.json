{
   "manifest_version": 2,
   "description": "A better way to browse files: less-restricted from the OS",
   "name": "Local File Viewer",
   "content_scripts": [ {
      "js": [ "main/content-script.js" ],
      "run_at": "document_idle",
      "matches": [ "file:///*" ]
   },
   {
      "js": [ "main/loaded.js" ],
      "run_at": "document_end",
      "matches": [ "file:///*" ]
   }
   ],
   "background": {
      "scripts": ["main/background-script.js"],
      "persistent": false
   },
   
   "options_ui":{
		"page": "popup/popup.html"
	},

   "browser_action": {
		"default_icon":{
			"16": "/popup/icon16.png"
		},
		"default_title": "File Viewer On Browser",
		"default_popup": "popup/popup.html"
	},
   "icons": {
       "16": "popup/icon16.png"
   },

   "web_accessible_resources": [
     "node_modules/freezeframe/dist/freezeframe.min.js"
   ],
   "permissions": [
      "tabs", "webNavigation", "storage", "<all_urls>"
   ],
   "version": "0.0.0.41"
}
